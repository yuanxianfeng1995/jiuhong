
.header{
	padding: 30rpx 26rpx;
}
.line_1{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	font-size: 28rpx;
	color: #000000;
	line-height: 1.8;
}
.list{
	padding: 0 20rpx;
	background: #ffffff;
}
.item{
	height: 98rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.left{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.left text{
	padding-left: 20rpx;
	font-size: 24rpx;
	color: #000000;
}
.left image{
	width: 48rpx;
	height: 48rpx;
	border-radius: 50%;
	border: 2rpx solid #532da3;
	box-shadow: 0px 8rpx 8rpx 0px rgba(0,0,0,0.25);
}
.right text{
	font-size: 24rpx;
	color: #000000;
}

